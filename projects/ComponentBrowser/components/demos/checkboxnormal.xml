<serialization xmlns="urn:tibco.com/v3.0" jsxversion="3.9">
  <name><![CDATA[Checkbox]]></name>
  <icon/>
  <description><![CDATA[This demonstrates interaction with a standard checkbox.]]></description>
  <onBeforeDeserialize/>
  <onAfterDeserialize><![CDATA[
this.onTextChange = function(strValue) {
  checkbox.setText(strValue, true);
};

this.onCheckedSelect = function(strRecordId) {
  checkbox.setChecked(strRecordId);
};

this.onEnabledSelect = function(strRecordId) {
  checkbox.setEnabled(strRecordId).repaint();
};

this.setChecked = function(intValue) {
  checked.setValue(intValue);
};

text.setValue(checkbox.getText());
checked.setValue(checkbox.getChecked());
enabled.setValue(checkbox.getEnabled());
  ]]></onAfterDeserialize>
  <object type="jsx3.gui.LayoutGrid">
    <variants jsxrelativeposition="0" jsxleft="0" jsxtop="0" jsxoverflow="2"/>
    <strings jsxname="root" jsxcols="*,200" jsxwidth="100%" jsxheight="100%"/>
    <events/>
    <object type="jsx3.gui.Block">
      <variants jsxoverflow="2" jsxpadding="8"/>
      <strings jsxname="col1" jsxwidth="100%" jsxheight="100%"/>
      <dynamics jsxborder="@Outset"/>
      <object type="jsx3.gui.CheckBox">
        <variants jsxheight="18" jsxchecked="0" jsxenabled="1" jsxdefaultchecked="0"/>
        <strings jsxname="checkbox" jsxtext="Checkbox!" jsxmargin="0 4 0 0"/>
        <events jsxtoggle="root.setChecked(intCHECKED);"/>
      </object>
    </object>
    <object type="jsx3.gui.Block">
      <variants jsxoverflow="1"/>
      <strings jsxname="col2" jsxwidth="100%" jsxheight="100%"/>
      <dynamics jsxbgcolor="@Col2 Background" jsxpadding="@8Pixel"/>
      <object type="jsx3.gui.Block">
        <variants jsxfontsize="12"/>
        <strings jsxname="name" jsxwidth="100%" jsxfontweight="bold" jsxpadding="0 0 4 0"/>
      </object>
      <object type="jsx3.gui.Block">
        <variants/>
        <strings jsxname="desc" jsxwidth="100%"/>
      </object>
      <object type="jsx3.gui.Block">
        <variants/>
        <strings jsxname="hr" jsxwidth="100%" jsxtext="&lt;hr&gt;" jsxpadding="8 0 8 0"/>
      </object>
      <object type="jsx3.gui.Label">
        <variants jsxrelativeposition="1" jsxoverflow="3" jsxwidth="75"/>
        <strings jsxname="formLabel" jsxtext="Text" jsxfor="text" jsxfontweight="bold" jsxtextalign="left"/>
      </object>
      <object type="jsx3.gui.TextBox">
        <variants jsxheight="18" jsxwidth="100"/>
        <strings jsxname="text" jsxmargin="0 4 4 0"/>
        <events jsxchange="root.onTextChange(strVALUE);"/>
      </object>
      <object type="jsx3.gui.Label">
        <variants jsxrelativeposition="1" jsxoverflow="3" jsxwidth="75"/>
        <strings jsxname="formLabel" jsxtext="Checked" jsxfor="checked" jsxfontweight="bold" jsxtextalign="left"/>
      </object>
      <object type="jsx3.gui.Select">
        <variants jsxwidth="100" jsxheight="18" jsxxmlasync="1" jsxenabled="1" jsxvalue="1"/>
        <strings jsxname="checked" jsxmargin="0 4 4 0" jsxxml="&lt;data jsxid=&quot;jsxroot&quot;&gt;&lt;record jsxid=&quot;0&quot; jsxtext=&quot;Unchecked&quot;/&gt;&lt;record jsxid=&quot;1&quot; jsxtext=&quot;Checked&quot;/&gt;&lt;/data&gt;"/>
        <events jsxselect="root.onCheckedSelect(strRECORDID);"/>
      </object>
      <object type="jsx3.gui.Label">
        <variants jsxrelativeposition="1" jsxoverflow="3" jsxwidth="75"/>
        <strings jsxname="formLabel" jsxtext="Enabled" jsxfor="enabled" jsxfontweight="bold" jsxtextalign="left"/>
      </object>
      <object type="jsx3.gui.Select">
        <variants jsxwidth="100" jsxheight="18" jsxxmlasync="1" jsxenabled="1" jsxvalue="1"/>
        <strings jsxname="enabled" jsxmargin="0 4 4 0" jsxxml="&lt;data jsxid=&quot;jsxroot&quot;&gt;&lt;record jsxid=&quot;0&quot; jsxtext=&quot;Disabled&quot;/&gt;&lt;record jsxid=&quot;1&quot; jsxtext=&quot;Enabled&quot;/&gt;&lt;/data&gt;"/>
        <events jsxselect="root.onEnabledSelect(strRECORDID);"/>
      </object>
    </object>
  </object>
</serialization>
